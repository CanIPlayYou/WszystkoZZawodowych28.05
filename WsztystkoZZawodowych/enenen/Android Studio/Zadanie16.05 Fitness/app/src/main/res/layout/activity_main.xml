<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a8dadc">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#457b9d"
        android:gravity="center_horizontal|center_vertical"
        android:text="Zapisy na zajÄ™cia fitness"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/imieNazwiskoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Podaj imie i nazwisko..."
        android:inputType="text" />

    <Spinner
        android:id="@+id/zajeciaSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Wiek:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-27dp"
        android:text="0"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="16:00" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:backgroundTint="#457b9d"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>